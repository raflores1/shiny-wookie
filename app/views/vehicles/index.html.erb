<h1> Vehicle List </h1>

<table>
  <thead>
    <tr>
      <th>Vin</th>
      <th>Manufacturer</th>
      <th>Year</th>
      <th>Model</th>
      <th>Trim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  	<% @customer_vehicles.each do |vehicle| %>
  	<tr>
        <td><%= vehicle.vin %></td>
        <td><%= vehicle.manufacturer %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.trim%></td>
        <td><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
	<% end %>
</tbody>
</table>


