<p id="notice"><%= notice %></p>

<h1><%= (@customer.first_name) + (' ') + (@customer.last_name)+ ("'s ") + ('Vehicles')%></h1>

<table>
  <thead>
    <tr>
      <th>Vin</th>
      <th>Manufacturer</th>
      <th>Year</th>
      <th>Model</th>
      <th>Trim</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

  	<% @vehicles.each do |vehicle| %>
  	<tr>
      <tr id="<%= dom_id(vehicle) %>">
        <td><%= vehicle.vin %></td>
        <td><%= vehicle.manufacturer %></td>
        <td><%= vehicle.year %></td>
        <td><%= vehicle.model %></td>
        <td><%= vehicle.trim%></td>
        <td><%= link_to 'Show', customer_vehicle_path(@customer, vehicle) %></td>
        <td><%= link_to 'Edit', edit_customer_vehicle_path(@customer, vehicle) %></td>
        <td><%= link_to 'Destroy', customer_vehicle_path(@customer, vehicle), method: :delete, data: { confirm: 'Are you sure?' }%></td>
    </tr>
	<% end %>
</tbody>
</table>


<%= link_to 'New Vehicle', new_customer_vehicle_path %>