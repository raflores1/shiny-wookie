<p id="notice"><%= notice %></p>
<h3>Estimate for:</h3>
<p> Customer: <%= @estimate.customer.first_name + " " + @estimate.customer.last_name %></p>
<p><strong>Address:</strong></p>
<p><%= @estimate.customer.addr1%></p>
<p><%= @estimate.customer.city + ", " + @estimate.customer.state + " " + @estimate.customer.zip%></p>
<p><strong>Phone/Email:</strong>
<p><%=@estimate.customer.h_phone + " / " + @estimate.customer.email%></p>
<p><strong>Vehicle:</strong>
<p><%= @estimate.vehicle.model + " " + @estimate.vehicle.trim %></p>


<table>
  <thead>
    <tr>
      <th>Quantity</th>
      <th>Description</th>
      <th>Price</th>
      <th>Extended</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lines_in_estimates.each do |lines_in_estimate| %>
      <tr id="<%= dom_id(lines_in_estimate) %>">
        <td><%= lines_in_estimate.qty %></td>
        <td><%= lines_in_estimate.product.product_desc%></td>
        <td><%= lines_in_estimate.product.price %></td>
        <td><%= lines_in_estimate.extended %></td>
        <td><%= link_to 'Delete', estimate_lines_in_estimate_path(@estimate, lines_in_estimate), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Add Item', new_estimate_lines_in_estimate_path %>

<h5>Subtotal:</h5>
<%=@estimate.subtotal%><br>
<h5>State Tax:</h5>
<%=@estimate.statetax%>
<h5>Mun Tax:</h5>
<%=@estimate.muntax %>
<h5>Total:</h5>
<%=@estimate.total %><br>

<%=link_to 'Back', '/estimates' %>
